# MinGW specific Makefile for libsamplerate.



PROGRAMS = sndfile-resample.exe
TARGETS = libsamplerate.dll $(PROGRAMS) varispeed-play.exe samplerate.pc

AR = i686-w64-mingw32-ar
CC = i686-w64-mingw32-gcc
CFLAGS =  -I/home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/include -g -O2 -std=gnu99 -W -Wstrict-prototypes -Wmissing-prototypes -Wall -Waggregate-return -Wcast-align -Wcast-qual -Wnested-externs -Wshadow -Wpointer-arith -pipe -Isrc
COMPILER_IS_GCC = 
CPP = i686-w64-mingw32-gcc -E
CPPFLAGS =  -I/home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/include
CXX = i686-w64-mingw32-g++
DLLTOOL = i686-w64-mingw32-dlltool
DLLWRAP = 
FFTW3_CFLAGS = 
FFTW3_LIBS = 
INSTALL = /usr/bin/install -c
INSTALL_DATA = ${INSTALL} -m 644
install_sh = ${SHELL} /home/osboxes/Documents/vlc-3.0/contrib/win32/samplerate/Cfg/install-sh
LDFLAGS =  -L/home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/lib 
LN_S = ln -s
PEXPORTS = 
PACKAGE = libsamplerate
PACKAGE_BUGREPORT = erikd@mega-nerd.com
PACKAGE_NAME = libsamplerate
PACKAGE_STRING = libsamplerate 0.1.9
PACKAGE_TARNAME = libsamplerate
PACKAGE_VERSION = 0.1.9
RANLIB = i686-w64-mingw32-ranlib
SNDFILE_CFLAGS = -std=c99 
SNDFILE_LIBS = 
STRIP = i686-w64-mingw32-strip

#====================================================================
# Target directories.

bindir = ${exec_prefix}/bin
exec_prefix = ${prefix}
htmldocdir = /home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/share/doc/libsamplerate0-dev/html
includedir = /home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/include
libdir = /home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/lib
pkgconfigdir = /home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32/lib/pkgconfig
prefix = /home/osboxes/Documents/vlc-3.0/contrib/i686-w64-mingw32

#====================================================================
# Targets

all : $(TARGETS)

clean :
	rm -f  $(TARGETS) *.del *.lib src/*.o tests/*.o tests/*.exe

install : $(TARGETS)
	$(install_sh) -c libsamplerate.dll $(libdir)
	$(install_sh) -c samplerate.pc $(pkgconfigdir)
	@for prog in $(PROGRAMS); do \
		echo "installing ... $$prog" ; \
		$(install_sh) -c "$$prog" $(bindir) ; \
		done;
	$(install_sh) -c src/samplerate.h $(includedir)
 
uninstall :
	rm -f $(libdir)/libsamplerate.dll
	rm -f $(pkgconfigdir)/samplerate.pc
	@for prog in $(PROGRAMS); do \
		echo "removing ... $(bindir)/$$prog" ; \
		rm -f $(bindir)/"$$prog" ; \
		done;
	rm -f $(includedir)/samplerate.h

#====================================================================

LINK_OBJS = \
	src/src_linear.o \
	src/src_sinc.o \
	src/src_zoh.o \
	src/samplerate.o

libsamplerate.dll libsamplerate.lib : $(LINK_OBJS)
	$(DLLWRAP) --def Win32/libsamplerate.def $(LINK_OBJS) --output-lib libsamplerate.lib -o libsamplerate.dll
	$(STRIP) libsamplerate.dll

sndfile-resample.exe : examples/sndfile-resample.c libsamplerate.lib
	$(CC) $(CFLAGS) $(SNDFILE_CFLAGS) $+ $(SNDFILE_LIBS) -o $@

varispeed-play.exe : examples/varispeed-play.c examples/audio_out.o libsamplerate.lib
	$(CC) $(CFLAGS) $(SNDFILE_CFLAGS) $+ $(SNDFILE_LIBS) -lwinmm -o $@

examples/audio_out.o : examples/audio_out.c
	$(CC) $(CFLAGS) $(SNDFILE_CFLAGS) -c $+ -o $@

samplerate.pc : samplerate.pc.in config.status
	@./config.status $@

config.status :
	./configure

#====================================================================
# Testing programs.

TEST_PROGS = \
     tests/misc_test.exe \
